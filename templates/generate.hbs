<div class="npcGenGPT">
    {{#each category}}
    <div>
        <label for="{{value}}">{{localize label}}:</label>
        <select id="{{value}}">
            {{#each option}}
            <option value="{{value}}">{{#if translate}}{{localize label}}{{else}}{{label}}{{/if}}</option>
            {{/each}}
        </select>
    </div>
    {{/each}}
    <button type="submit" id="npcGenGPT_create-btn">{{localize 'npc-generator-gpt.dialog.button'}}</button>
</div>
