<div class="npcGenGPT">
    <div>
        <label for="name">{{localize "npc-generator-gpt.dialog.name"}}:</label>
        <input id="name" type="text" placeholder="{{localize "npc-generator-gpt.dialog.ph-name"}}">
    </div>
    {{#each category}}
    <div>
        <label for="{{value}}">{{localize label}}:</label>
        <select id="{{value}}">
            {{#each option}}
            <option value="{{value}}">{{#if translate}}{{localize label}}{{else}}{{label}}{{/if}}</option>
            {{/each}}
        </select>
    </div>
    {{/each}}
    <div style="padding-bottom:96px;">
        <label for="context" style="float: none;">{{localize "npc-generator-gpt.dialog.context"}}:</label>
        <textarea id="context" rows="4" placeholder="{{localize "npc-generator-gpt.dialog.ph-context"}}"></textarea>
    </div>
    <button type="submit" id="npcGenGPT_create-btn">{{localize 'npc-generator-gpt.dialog.button'}}</button>
</div>
